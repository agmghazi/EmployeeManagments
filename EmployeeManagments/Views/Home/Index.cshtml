@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}




<div class="card-deck">
    @foreach (var employe in Model)
    {
        var photoPath = "~/Images/" + (employe.PhotoPath ?? "person.png");
        <div class="card m-3" style="min-width: 18rem; max-width: 30.5%">
            <div class="card-header">
                <h3>@employe.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employe.Id" class="btn btn-primary">View</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@employe.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-dark">Delete</a>
            </div>
        </div>
    }
</div>