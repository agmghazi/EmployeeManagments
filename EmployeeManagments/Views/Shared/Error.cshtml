@if (ViewBag.ErrorTitle == null)
{

    <h3>
        An error occurred while processing your request. The support
        team is notified and we are working on the fix
    </h3>
    <h5>Please contact us on agmghazi@hotmail.com</h5>
    <hr />
    <h3>Exception Details:</h3>
    <div class="alert alert-danger">
        <h5>Exception date time</h5>
        <hr />
        <p>@DateTime.Now</p>
        <h4>Please Keep Exception data time and Send to agmghazi@hotmail.com</h4>
    </div>

}
else
{
    <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
    <h6 class="text-danger">@ViewBag.ErrorMessage</h6>
}